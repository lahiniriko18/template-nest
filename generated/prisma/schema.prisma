generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  numClient String   @id @default(uuid())
  name      String
  email     String   @unique
  contact   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Produit {
  numProduit  String   @id @default(uuid())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
